{
	"name": "flame/framework",
	"type": "library",
    "description": "Flame is simple and smart FRAMEWORK based on Nette and Doctrine2",
    "keywords": ["framework", "nette", "simple", "flame", "jsifalda", "tools", "doctrine"],
    "homepage": "https://github.com/flame-org/framework",
    "license": "BSD-2-Clause-FreeBSD",
    "minimum-stability":"dev",

    "authors": [
        {
            "name": "Jiří Šifalda",
            "homepage": "http://jsifalda.name/"
        }
    ],

    "support":{
        "email":"flame@jsifalda.name",
        "issues":"https://github.com/flame-org/framework/issues"
    },

	"require": {
		"php": ">=5.3.2",
		"nette/nette": "@dev"
	},

	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"doctrine/orm": "2.3.0",
		"mikey179/vfsStream": "1.1.*",
		"nette/tester": "@dev"
	},

	"suggest": {
		"doctrine/orm": ">=2.3.0"
	},

	"config": {
		"vendor-dir": "libs"
	},

	"autoload": {
		"psr-0": {"Flame": ""},
		"classmap": [
			"Flame/exceptions.php",
			"Flame/Application/UI/exceptions.php"
		]
	}
}